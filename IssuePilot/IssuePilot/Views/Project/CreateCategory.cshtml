@model IssuePilot.Models.ViewModels.CategoryCreateInputModel

@{
    ViewData["Title"] = "Erstelle eine Ticket-Kategorie";
}

<h2>Ticket-Kategorie erstellen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
                <a class="btn btn-primary ml-2" asp-action="Other" asp-route-id="@Model.ProjectId">Zurück</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
