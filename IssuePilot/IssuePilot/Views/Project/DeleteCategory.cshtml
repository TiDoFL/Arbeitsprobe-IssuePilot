@model IssuePilot.Models.ViewModels.CategoryDeleteViewModel

@{
    ViewData["Title"] = "Kategorie löschen";
}

<h2>Sind Sie sicher, dass Sie dieses Kategorie löschen wollen?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name der Kategorie:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketCategory.Name)
        </dd>
    </dl>
    <form asp-action="DeleteCategory">
        <input type="hidden" asp-for="@Model.ProjectId" />
        <input type="hidden" asp-for="@Model.CategoryId" />
        <input type="submit" value="Löschen" class="btn btn-danger" />
        <a class="btn btn-primary ml-2" asp-action="Other" asp-route-id="@Model.Project.Id">Zurück</a>
    </form>

    
</div>
