@model IssuePilot.Models.ViewModels.RemoveMemberFromProjectViewModel

@{
    ViewData["Title"] = "Entferne Mitglied";
}

<h2>Bist du sicher, dass du diesen Benutzer aus dem Projekt entfernen möchtest?</h2>
<hr />
<div>
        <dl class="row">
            <dt class="col-sm-2">
                Benutzername
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
        </dl>
        <form asp-action="RemoveMember">
                <div class="form-group">
                    <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId" class="form-control" />
                    <input type="hidden" asp-for="UserId" value="@Model.UserId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Entfernen" class="btn btn-danger" />
                    <a class="btn btn-primary ml-2" asp-action="Members" asp-route-id="@Model.ProjectId">Zurück</a>
                </div>
        </form>
</div>



