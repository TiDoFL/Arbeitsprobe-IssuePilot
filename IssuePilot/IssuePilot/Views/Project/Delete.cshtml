@model IssuePilot.Models.Project

@{
    ViewData["Title"] = "Delete";
}


    <h2>Sind Sie sicher, dass Sie dieses Projekt löschen wollen?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titel:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Beschreibung:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Erstelldatum:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" />
        <a class="btn btn-primary ml-2" asp-action="Other" asp-route-id="@Model.Id">Zurück</a>
    </form>
</div>
