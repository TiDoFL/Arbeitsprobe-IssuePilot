@model IssuePilot.Models.Ticket

@{
    ViewData["Title"] = "Ticket löschen";
}
<h2>Möchten Sie das Ticket wirklich löschen?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Ersteller
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketCreator.UserName)
        </dd>
        <dt class = "col-sm-2">
            Beschreibung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" />
        <a class="btn btn-primary ml-2" asp-action="Details" asp-route-id="@Model.Id">Zurück</a>
    </form>
</div>
